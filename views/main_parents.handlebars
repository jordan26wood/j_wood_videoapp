<div id="app">
<a href="/">
  <i class="fa-fa-home"></i>
</a>
<a class="back" href="/">Go Back</a>

<h1 class="today">{{message}}</h1>
<h2 class="moviesTitle">{{movie}}</h2>

<div class="moviefilt">
<div class="filter"><p>Comedy</p></div>
<div class="filter"><p>Animated</p></div>
<div class="filter"><p>Family</p></div>
</div>

<div class="heading">
<ul>
  <div >
    <li v-for="movie in movies">
      <h4>${movie.movie_title}</h4>
      <h4>(${movie.movie_year})</h4>
      <p>Rating: ${movie.movie_rating}</p>
    <a :href="'/watch/' + movie.movies_id" :id="movie.movies_id">  <img id=movImages :src="'images/' + movie.movie_thumbnail" :alt="movie.movie_title"></a>
    </li>
  </div>
</ul>
</div>

<h2 class="musicTitle">{{music}}</h2>

<div class="moviefilt">
<div class="filter"><p>1950's</p></div>
<div class="filter"><p>1960's</p></div>
<div class="filter"><p>1970's</p></div>
</div>

<div class="heading">
<ul>
<li v-for="song in music">
  <h4>${song.music_title}</h4>
  <h4>(${song.music_year})</h4>
  <p>Rating: ${song.music_rating}</p>
<a href="'/music/' + music.music_id" :id="song.music_id">  <img id=musicImages :src="'images/' + song.music_thumbnail" :alt="song.music_title"></a>

</li>
</ul>
</div>
</div>
